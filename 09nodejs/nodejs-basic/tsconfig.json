{
  "compilerOptions": {
    "sourceMap": true,
    "jsx": "react",
    "target": "es5",
    "declaration": true,
    "baseUrl": ".",
    "module": "esnext",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules"
  ]
}